<div class="container">
  <div class="col-lg-8 col-md-offset-2">
    
    <h1>Log in</h1>

    <div class="well well bs-component">
    <%= form_tag '/login', {class:'form-horizontal'} do %>
      <div class="form-group">
        <%= label_tag :email, nil, class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= text_field_tag :email, nil, placeholder: 'Email', class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :password, nil, class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
        <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= submit_tag "Log In", class: 'btn btn-default' %>
        </div>
      </div>
    <% end -%>
    </div>

    <div>
      <%= link_to "Don't have an account yet? Sign up.", '/signup' %>
    </div>

  </div>
</div>